{
    "compilerOptions": {
      "module": "es2015",
      "target": "es6",
      "outDir": "build/lib",
      "lib": [
        "es5",
        "es6",
        "es7",
        "es2017",
        "dom"
      ],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
    //   "rootDir": "../../",
    //   "baseUrl": "../src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
    //   "noEmitOnError": true,
      "noUnusedParameters": true,
    },
    "include": [
      "../src/**/*",
      "../../.../types/**/*"
    ],
    "exclude": [
      "../../../node_modules"
    ]
  }